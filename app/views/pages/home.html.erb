<div class="main-container">
  <div class="top-container">
    <%= link_to new_diary_path, class: "top-right" do %>
      <button class="top-right-btn">New Diary</button>
    <% end %>
  </div>
  <div class="diary-grid">
    <% @diaries.each do |diary| %>
      <div class="diary-card">
        <div class="journal-sidebar"></div>
        <div class="journal-content">
          <div class="journal-box">
            <div class="journal-header">
              <h1><%= diary.title %></h1>
            </div>
            <div class="journal-actions">
              <%= link_to new_diary_entry_path(diary) do %>
                <button class="action-btn">
                  <i class="icon">&#9998;</i>
                </button>
              <% end %>
              <%= link_to diary_entries_path(diary) do %>
                <button class="action-btn">
                  <i class="icon">&#9776;</i>
                </button>
              <% end %>
              <%= link_to "#" do %>
                <button class="action-btn">
                  <i class="icon">&#9881;</i>
                </button>
              <% end %>
              <%= link_to "#" do %>
                <button class="action-btn">
                  <i class="icon">&#128274;</i>
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
